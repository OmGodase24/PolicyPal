###############################################
# PolicyPal AI Service - Environment Template #
###############################################

# MongoDB (same cluster as backend)
MONGODB_URI=<YOUR_MONGODB_ATLAS_URI>

# OpenAI
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>

# Service runtime
# Render provides PORT automatically; keep these defaults for local/dev
PORT=8080
AI_SERVICE_PORT=8080
AI_SERVICE_HOST=0.0.0.0

# CORS and backend connectivity
# Comma-separated list for CORS. Add your frontend URL when deployed.
ALLOWED_ORIGINS=https://policypal-production.up.railway.app,http://localhost:4200,http://localhost:3000
BACKEND_URL=https://policypal-production.up.railway.app

# Model defaults (used by LangChain/OpenAI helpers)
LANGCHAIN_MODEL=gpt-4o-mini
LANGCHAIN_TEMPERATURE=0.7
LANGCHAIN_MAX_TOKENS=4000

# File limits
PDF_MAX_SIZE_MB=50

