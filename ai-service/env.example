# MongoDB Configuration - Same as backend
# Replace with your MongoDB Atlas connection string (no real secrets in examples)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database>?retryWrites=true&w=majority

# OpenAI Configuration
# Use a placeholder here; set the real key only in platform environment variables
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Service Configuration
AI_SERVICE_PORT=8080
AI_SERVICE_HOST=0.0.0.0

# Model Configuration
EMBEDDING_MODEL=text-embedding-ada-002
CHAT_MODEL=gpt-3.5-turbo
MAX_TOKENS=800
MAX_CONTEXT_TOKENS=12000

# File Processing
MAX_FILE_SIZE=10485760
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vector Search
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=5

# Logging
LOG_LEVEL=INFO

DLP_CUSTOM_PATTERNS=["custom_pattern_1", "custom_pattern_2"]

# Privacy Configuration (optional)
PRIVACY_DEFAULT_RETENTION_DAYS=365
PRIVACY_REQUIRE_CONSENT=true

